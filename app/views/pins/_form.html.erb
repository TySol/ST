<%= form_for @pin, html: { multipart: true } do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


 <div class="form-group">
    <h5 style="color:white"><%= f.label :image  %></h5>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <h5 style="color:white"><%= f.label :description  %></h5>
    <%= f.text_field :description, class: "form-control" %>
  </div>

   <div class="form-group"> <h5 style="color:white"><%= f.label :priority  %></h5>
    <%= f.select :priority, options_for_select(%w[Normal High Highest]), class: "form-control"  %>
  </div>

  <div class="form-group">   <h5 style="color:white"><%= f.label :type  %></h5>
    <%= f.select :type, options_for_select(%w[Feature Document Usability Bug]), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>