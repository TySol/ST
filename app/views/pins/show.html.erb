<%= link_to 'Back', pins_path, class: "btn btn-success" %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-fluid">
      <div class="panel-heading center">
        <%= image_tag @pin.image.url %>
      </div>
      <div class="panel-body">
        <p><strong><%= @pin.description %></strong></p>
        <p><strong><%= @pin.kind %></strong></p>
        <p><strong><%= @pin.priority %></strong></p>
        <p><strong><%= @pin.user.email if @pin.user %></strong></p>

        <% if @pin.user == current_user %>
        <%= link_to edit_pin_path(@pin) do %>
              <span class="glyphicon glyphicon-plus"></span>
              Edit
            <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>